.h2 { font-size:48rpx;}
.h3 { font-size:40rpx;}
.h4 { font-size:36rpx;}
.h5 { font-size:32rpx;}
.h6 { font-size:28rpx;}
.h7 { font-size:26rpx;}
.h8 { font-size:24rpx;}
.bold { font-weight:bold;}

.f24 {font-size:24rpx;}
.f26 {font-size:26rpx;}
.f28 {font-size:28rpx;}
.f30 {font-size:30rpx;}
.f32 {font-size:32rpx;}

