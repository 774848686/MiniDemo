.container { position: relative; min-height: 100vh; width: 100vw; background-color: #f2f2f2; }
.containerFix { position: fixed; width: 100vw; min-height: 100vh; background-color: #f2f2f2; }
.containerContent { position: relative; width: 100vw; min-height: 100vh; text-align: center; }



.fl {float:left}
.fr {float:right}

.flex {display: flex}
.flexH {flex-direction: row}
.flexV {flex-direction: column}
.inFlex {display: inline-flex}

.pr {position: relative}
.po {position: absolute;left:0;top:0;width:100%;height:100%}
.pf {position: fixed;left:0;top:0;width:100%;height:100%;}

.mt-10 {margin-top: 10rpx;}
.mt-15 {margin-top: 15rpx;}
.mt-20 {margin-top: 20rpx;}
.ml-25 {margin-left:25rpx;}
.ml-30 {margin-left:30rpx;}
.mr-25 {margin-right:25rpx;}
.mr-30 {margin-right:30rpx;}
.m-30 {margin:30rpx;}

.pt-20 {padding-top: 20rpx;}
.pt-30 {padding-top: 30rpx;}
.pl-20 {padding-left: 20rpx;}
.pl-30 {padding-left: 30rpx;}
.pr-20 {padding-right: 20rpx;}
.pr-30 {padding-right: 30rpx;}
.p-20 {padding: 20rpx;}
.p-30 {padding: 30rpx;}

.h1, .h2, .h3, .h4, .h5, .h6, .h7 {color:#252525;}
