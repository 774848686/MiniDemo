@import '/extend/flex.wxss'
.music {
  text-align: center;
}

image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
}

.rotateInit {
  animation: rotate 8s linear infinite forwards;
}
.randomWords view{
  display: inline-block;
  width:160rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  color:#ffffff;
  background: greenyellow;
  margin:5px;
  overflow: hidden;
}
.yourAnswer text{
  display: inline-block;
  width:160rpx;
  height:60rpx;
   line-height: 60rpx;
  text-align: center;
  color:#ffffff;
  background: red;
  margin:5px;
  margin-bottom:50rpx;
  overflow: hidden;
}
@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
